<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project_D.AdminClientAnalysisPage"
             Title="Client Details">

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Client Details"
                   HorizontalOptions="Center"
                   FontSize="Large"
                   Margin="0,0,0,20"/>
            <Label Text="Full Name:"
                   FontSize="Medium"/>
            <Label x:Name="FullNameLabel"
                   FontSize="Medium"
                   Margin="0,0,0,20"/>
            <Label Text="Email:"
                   FontSize="Medium"/>
            <Label x:Name="EmailLabel"
                   FontSize="Medium"
                   Margin="0,0,0,20"/>
            <Label Text="Password:"
                   FontSize="Medium"/>
            <Label x:Name="PasswordLabel"
                   FontSize="Medium"
                   Margin="0,0,0,20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

