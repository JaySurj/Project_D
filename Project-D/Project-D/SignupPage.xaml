<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project_D.SignupPage"
             BackgroundColor="White">


    <ScrollView>
        <StackLayout
            Spacing="10"
            Padding="20">

            <Label
                Text="Sign Up"
                FontSize="24"
                HorizontalOptions="Center" 
                TextColor="#432C81" />

            <Entry
                x:Name="UsernameEntry"
                Placeholder="Username"
                TextColor="#432C81" />

            <Entry
                x:Name="EmailEntry"
                Placeholder="Email"
                TextColor="#432C81" />

            <Entry
                x:Name="PasswordEntry"
                Placeholder="Password"
                IsPassword="True"
                TextColor="#432C81" />

            <!-- Add more entry fields for other signup data as needed -->

            <Button
                Text="Submit"
                Clicked="Signup"
                BackgroundColor="#432C81"
                TextColor="White"
                CornerRadius="10"
                HorizontalOptions="FillAndExpand" />

        </StackLayout>
    </ScrollView>

</ContentPage>
