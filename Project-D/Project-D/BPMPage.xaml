<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project_D.BPMPage"
             Title="BPMPage">
    <VerticalStackLayout>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">

        <Label x:Name="BpmLabel" FontSize="24" HorizontalOptions="Center" TextColor="Black"/>
        <Label x:Name="HighBPM" FontSize="24" HorizontalOptions="Center" TextColor="Black"/>

        <Button Text="Generate BPMs" Clicked="OnGenerateBPMsClicked"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>